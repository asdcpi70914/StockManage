@model List<SRCMenu>

@{
    if (Model == null || Model.Count == 0)
    {
        return;
    }
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            @*<h4 class="mb-sm-0">@ViewBag.ptitle</h4>*@
            <h4 class="mb-sm-0">@Model.First().name</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    @*<li class="breadcrumb-item"><a href="javascript: void(0);">@ViewBag.pagetitle</a></li>*@
                    @*<li class="breadcrumb-item active">@ViewBag.ptitle</li>*@
                    
                    <li class="breadcrumb-item"><a href="javascript: void(0);">@Model.First().name</a></li>
                    @foreach(var each in Model.Skip(1))
                    {
                        <li class="breadcrumb-item active">@each.name</li>
                    }

                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->