@model ChangePasswordModel

@using (Html.BeginForm("ChangePassword", "BackendUser", FormMethod.Post))
{
    <div class="row">
    <div class="col-lg-12">
        <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">變更密碼</h4>
                    <div class="flex-shrink-0">
                        <div class="form-check form-switch form-switch-right form-switch-md">
                        </div>
                    </div>
                </div><!-- end card header -->
                <div class="card-body">
                    <form id="search_form">
                        <div class="row justify-content-center">
                            <div class="col-4">

                                <div class="input-group mb-3">
                                    <span class="input-group-text">輸入舊密碼</span>
                                    <input type="password" class="form-control" id="OldPassword" name="OldPassword" required>
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text">輸入新密碼</span>
                                    <input type="password" class="form-control" id="NewPassword" name="NewPassword" required>
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text">確認新密碼</span>
                                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                                </div>
                        
                                <div class="text-center mt-3">
                                        <button type="submit" class="btn btn-primary">儲存</button>
                                        <button type="button" class="btn btn-primary" id="btnCancel">取消</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>

}




@section scripts
{
    @if (Model != null && Model.ResultView != null)
    {
        <partial name="Component/_src_pg_message" for="@Model.ResultView" />
    }
    <script>
        $(document).ready(init);
        function init() {
            init_title("修改個人密碼");
            init_btn();
        }

        function init_title(title) {
            //$('.tpr-title').html(title);
        }

        function init_btn() {
            $("#btnCancel").click(function () {
                $("#OldPassword").val("");
                $("#NewPassword").val("");
                $("#ConfirmPassword").val("");
            });
        }

    </script>

}
